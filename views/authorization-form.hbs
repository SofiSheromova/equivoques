<script src="/javascripts/form-validation.js"></script>

<form id="authorization-form" method="post">
    <div class="row">
        <div class="input-field controls">
            <label for="userName">Имя</label>
            <input type="text" id="userName" name="userName" minlength="3" class="validate" required placeholder="">
        </div>
    </div>
    <div class="row">
        <div class="controls">
            <label for="userBirthday">День рождения</label>
            <input type="date" id="userBirthday" name="userBirthday"  class="validate" required />
        </div>
    </div>
    <div class="row center">
        <div class="input-field">
            <button class="btn" type="submit" name="action">
                Вход <i class="material-icons right">person</i>
            </button>
        </div>
    </div>
</form>
